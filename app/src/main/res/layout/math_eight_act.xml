<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tvt.math.ui.CommonTitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/screen_size_50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:text="@string/math_eight_title" />

    <com.tvt.math.ui.GifView
        android:id="@+id/gifView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:gif="@mipmap/math_eight_1"
        app:layout_constraintDimensionRatio="1:1.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/gifView2"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <com.tvt.math.ui.GifView
        android:id="@+id/gifView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:gif="@mipmap/math_eight_2"
        app:layout_constraintDimensionRatio="1:1.2"
        app:layout_constraintLeft_toRightOf="@id/gifView1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tvMathCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/screen_size_10dp"
        android:background="@mipmap/math_eight_code"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/gifView1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="@dimen/screen_size_50dp"
        android:layout_marginStart="@dimen/screen_size_50dp"
        android:layout_marginTop="@dimen/screen_size_10dp"
        android:layout_marginEnd="@dimen/screen_size_50dp"
        android:background="@drawable/result_background"
        android:gravity="center"
        android:text="@string/result"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tvMathCode" />

</androidx.constraintlayout.widget.ConstraintLayout>